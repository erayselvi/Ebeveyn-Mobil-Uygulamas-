<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<!-- GridLayout -->
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:columnCount="2"
        android:rowCount="4"
        android:padding="26dp">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/purple_200"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="bookclicked">

                <ImageView
                    android:id="@+id/logoImageView1"
                    android:layout_width="100dp"
                    android:layout_height="96dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_menu_book_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logoImageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Anı Defterim"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Diğer CardView öğeleri -->

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/purple_200"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="babyheightclicked">

                <ImageView
                    android:id="@+id/logoImageView2"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_question_mark_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logoImageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Boy Aralık Tahmini"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/purple_200"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="vaccinationclicked">

                <ImageView
                    android:id="@+id/logoImageView3"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_vaccines_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logoImageView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Aşı Takvimi"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/purple_200">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="addchildclicked">

                <ImageView
                    android:id="@+id/logoImageView4"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_childadd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logoImageView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Çocuk Ekle"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/purple_200">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="lullablyclicked">

                <ImageView
                    android:id="@+id/logoImageView5"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_nmusic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logoImageView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Ninni Dinle"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Diğer CardView öğeleri -->

    </GridLayout>

<!-- BottomNavigationView -->
<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>

